{% from 'components/icon-macro.njk' import icon %}

<footer class="tt-footer">
  {% include 'components/theme/line-right.njk' %}
  <div class="tt-footer-inner">
    <div class="container">
      <div class="row">
        <div class="col-sm align-items-center text-start">
          <div class="tt-footer-remark">
            <p class="tt-footer-built-with">
              Built with <a class="no-underline" target="_blank" href="https://www.11ty.dev/"><span class="underline">11ty</span>{{ icon({ icon: 'external' }) }}</a>
              <br>
              <a class="no-underline" target="_blank" href="https://gitlab.silvercrater.dev/tt/timurtripp.com-11ty"><span class="underline">Source</span>{{ icon({ icon: 'external' }) }}</a> &#8226; <a href="/README.md">Readme</a>
            </p>
          </div>
        </div>
        <div class="col-sm align-items-center text-end">
          <span class="tt-footer-name theme-text-strong">{{ author }}</span>
          <div class="tt-footer-contact">
            {% if site.email %}<a href="mailto:{{ site.email }}">{{ site.email }}</a>{% endif %}
            {% if socials %}<ul class="tt-footer-socials">
              {% for socialName, social in socials %}{% if social.footer %}
                <li class="tt-footer-social tt-footer-social-{{ socialName|classify }}">
                  <a target="_blank" href="{{ social.url }}">
                    <span aria-hidden="true" class="text-like">{% brandIcon socialName %}</span>
                    <span class="visually-hidden">{{ socialName }}</span>
                  </a>
                </li>
              {% endif %}{% endfor %}
            </ul>{% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
