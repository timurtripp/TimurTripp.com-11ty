<button class="theme-mode-toggle-container" onclick="toggleThemeMode()">
	<div class="theme-mode-toggle">
		<div class="theme-mode-toggle-circle-inner">
			<div class="theme-mode-toggle-inner-left">
				{% for num in range(1, 8) %}<div class="theme-mode-toggle-line theme-mode-toggle-line-{{ num }}"></div>{% endfor %}
			</div><div class="theme-mode-toggle-inner-right">
				{% for num in range(1, 8) %}<div class="theme-mode-toggle-line theme-mode-toggle-line-{{ num }}"></div>{% endfor %}
			</div>
		</div>
	</div>
</button>
