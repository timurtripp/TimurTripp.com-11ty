{% from '../dictionary/term-macros.njk' import termList as renderTermList %}
{% from '../icon-macro.njk' import icon %}

<div class="summary d-sm-flex gap-4 flex-row item-{{ index }} item-{{ index }}-{{ id }}">
	{% block itemIcon %}{% if item.icon %}<div class="large-text my-2">{{ icon(item.icon) }}</div>{% endif %}{% endblock %}
	<div>
		<div class="item-header compact-content">
			{% block itemHeader %}
			<h3 class="item-name">{% block itemName %}{{ item.name }}{% endblock %}</h3>
			{% endblock %}
		</div>
		<div class="item-body">
			{% block itemBody %}
			<p class="item-description">{% block itemDescription %}{{ item.description }}{% endblock %}</p>
			{% if item._tags and item._tags|length %}
			<div class="content-block"><span class="d-none" aria-hidden="false">Tags: </span>{{ renderTermList(termList(item._tags, 'tags'), createTerm, termList, true) }}</div>
			{% endif %}
			{% endblock %}
		</div>
	</div>
</div>
