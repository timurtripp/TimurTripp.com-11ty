{#
/**
 * @file
 * Contains the template to display an item summary. Blocks can be overriden to display different information for different items.
 * 
 * Variables:
 * - index
 * - itemid
 * - item
 */
#}
{% from '../dictionary/term-macros.njk' import termList as renderTermList %}
{% from '../icon-macro.njk' import icon %}
<div class="summary d-sm-flex gap-3 flex-row item-{{ itemid|classify }}">
	{% block itemIcon %}{% if item.icon %}<div class="large-text my-2 px-2 theme-color-text"><div class="enlarged-text">{{ icon(item.icon) }}</div></div>{% endif %}{% endblock %}
	<div>
		<div class="item-header compact-content">
			{% block itemHeader %}
			<h3 class="item-name">{% block itemName %}{{ item.name }}{% endblock %}</h3>
			{% block itemBelowName %}
			<ul class="list-unstyled item-attributes">
			{% block itemBelowNameList %}
			{% set endDate = item.end if item.end else ('present' if item.start) %}{% if endDate %}<li class="item-date my-1"><span>{% if item.start %}{% dateFormatted item.start %}{% if endDate %} <span class="d-none" aria-hidden="false">to</span><span class="theme-color-text">{% include 'components/theme/triangle-left.njk' %}</span> {% endif %}{% endif %}{% dateFormatted endDate %}</span></li>{% endif %}
			{% endblock %}
			</ul>
			{% endblock %}
			{% endblock %}
		</div>
		<div class="item-body">
			{% block itemBody %}
			<p class="item-description">{% block itemDescription %}{% if item.description %}{{ item.description|markdown|externalLinks|safe }}{% endif %}{% endblock %}</p>
			{% block itemBelowDescription %}{% endblock %}
			{% if item._tags and item._tags|length %}
			<div class="content-block"><span class="d-none" aria-hidden="false">Tags: </span>{{ renderTermList(termList(item._tags, 'tags'), createTerm, termList, true) }}</div>
			{% endif %}
			{% endblock %}
		</div>
	</div>
</div>
