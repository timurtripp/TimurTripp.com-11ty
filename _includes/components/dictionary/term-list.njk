{% from './term-macros.njk' import termSummary, termIcon %}

<ul class="term-list{% if nested %} d-inline{% endif %} list-unstyled">
	{% for term in terms %}
	{% if nested %}<li class="d-inline-flex me-2"><div aria-hidden="true" class="tiny-text d-inline me-1">{{ termIcon(term) }}</div>{{ termLabel(term) }}</li>{% else %}<li class="section-block">{{ termSummary(term, createTerm, termList) }}</li>{% endif %}
	{% endfor %}
</ul>
